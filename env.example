NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Billing mode
# - disabled: no subscription gating (default)
# - lemon: Lemon Squeezy (to be implemented)
BILLING_PROVIDER=disabled

# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase (server-only, required for Solidgate webhooks + billing sync)
SUPABASE_SERVICE_ROLE_KEY=

# Optional: enable semantic search
OPENAI_API_KEY=

# Google Calendar (Phase 3)
# Create OAuth client in Google Cloud Console:
# - Authorized redirect URI: `${NEXT_PUBLIC_SITE_URL}/api/google-calendar/callback`
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Microsoft Calendar (Phase 4)
# Create OAuth app registration in Azure/Entra:
# - Redirect URI: `${NEXT_PUBLIC_SITE_URL}/api/microsoft-calendar/callback`
MICROSOFT_OAUTH_CLIENT_ID=
MICROSOFT_OAUTH_CLIENT_SECRET=

# App-level encryption key (base64-encoded 32 bytes) for storing third-party refresh tokens encrypted in DB.
# Generate: `node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"`
APP_ENCRYPTION_KEY=


