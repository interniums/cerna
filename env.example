NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Billing mode
# - disabled: no subscription gating (default)
# - lemon: Lemon Squeezy (to be implemented)
BILLING_PROVIDER=disabled

# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase (server-only, required for Solidgate webhooks + billing sync)
SUPABASE_SERVICE_ROLE_KEY=

# Solidgate (only required when billing is enabled and provider is Solidgate)
# API keys: Developers → Channels → keys
SOLIDGATE_API_PUBLIC_KEY=
SOLIDGATE_API_SECRET_KEY=

# Webhook keys: Developers → Channels → Webhook keys
SOLIDGATE_WEBHOOK_PUBLIC_KEY=
SOLIDGATE_WEBHOOK_SECRET_KEY=

# Billing prices (only required when billing is enabled and provider is Solidgate)
SOLIDGATE_PRODUCT_PRICE_ID_MONTHLY=
SOLIDGATE_PRODUCT_PRICE_ID_YEARLY=

# Trial (only required when billing is enabled and provider is Solidgate)
SOLIDGATE_TRIAL_DAYS=7

# Optional: enable semantic search
OPENAI_API_KEY=


